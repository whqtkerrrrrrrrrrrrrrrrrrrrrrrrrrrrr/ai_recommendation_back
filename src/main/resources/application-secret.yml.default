spring:
  datasource:
    url: jdbc:mysql://YOUR_URI:YOUR_PORT/YOUR_DATABASE
    username: YOUR_NAME
    password: YOUR_PW
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect
        show_sql: true
        format_sql: true
        use_sql_comments: true
    hibernate:
      ddl-auto: update